{
    "name": "Google Scholar Plus",
    "version": "0.4.3.1",
    "manifest_version": 2,
    "description": "Better Results in Less Time",
    "permissions": [
        "https://mkearl.com/",
        "storage"
    ],
    "content_scripts": [
        {
            "css": ["style.css", "agreement-popup.css"],
            "js": ["jquery.min.js", "content.js", "style.js", "rating.js"],
            "matches": ["https://scholar.google.com/scholar*" ]
        }
    ],
    "icons": { "16": "icon.png",
               "48": "icon48.png",
               "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}
